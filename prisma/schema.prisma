generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id
  firstName String
  lastName  String
  username  String @unique
  password  String
  jobs      Job[]
}

model Job {
  id          String   @id
  dateCreated DateTime @default(now())
  dateApplied String?
  title       String
  location    String?
  company     String?
  link        String?
  status      String
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

enum Status {
  BOOKMARKED
  APPLIED
  INTERVIEWING
  NEGOTIATING
  ACCEPTED
  REJECTED
}
